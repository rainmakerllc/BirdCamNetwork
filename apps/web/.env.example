# Firebase Configuration
# Get these from Firebase Console > Project Settings > General > Your apps > Web app

NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# App URL (for metadata URIs)
NEXT_PUBLIC_APP_URL=https://birdwatchnetwork.web.app

# Solana Configuration
# Network: 'devnet' for testing, 'mainnet-beta' for production
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# Optional: Custom RPC endpoints (defaults to public endpoints)
# NEXT_PUBLIC_SOLANA_RPC_DEVNET=https://api.devnet.solana.com
# NEXT_PUBLIC_SOLANA_RPC_MAINNET=https://api.mainnet-beta.solana.com

# Server-side only: Mint authority keypair (base58 encoded secret key)
# Generate with: solana-keygen new --outfile mint-authority.json
# Then base58 encode the secret key
BIRDCAM_MINT_AUTHORITY_SECRET=your_base58_secret_key_here

# Optional: Collection settings
# NEXT_PUBLIC_BIRDCAM_COLLECTION_PUBKEY=collection_authority_pubkey
# NEXT_PUBLIC_BIRDCAM_COLLECTION_MINT=collection_mint_address
