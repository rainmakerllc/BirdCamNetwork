rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User uploads (profile pics, etc)
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Clips - only owner can write, read based on visibility
    match /clips/{userId}/{clipId}/{allPaths=**} {
      allow read: if true; // Visibility controlled at Firestore level
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Sightings keyframes
    match /sightings/{userId}/{sightingId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Temp uploads (processing)
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
