{
  "name": "@birdcam/pi-bridge",
  "version": "1.0.0",
  "description": "Raspberry Pi bridge for BirdCam Network - connects IP cameras to the cloud",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "discover": "tsx src/discover.ts",
    "setup": "tsx src/discover.ts --setup",
    "install:pi": "curl -fsSL https://raw.githubusercontent.com/birdcam/pi-bridge/main/install.sh | bash"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.5.1",
    "firebase-admin": "^13.0.0",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^8.1.0",
    "node-fetch": "^3.3.2",
    "systeminformation": "^5.23.5",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "birdcam",
    "raspberry-pi",
    "rtsp",
    "ip-camera",
    "stream-relay"
  ],
  "license": "MIT"
}
